.wrapper
	.toolbar
		.container_6
			.header.without_link
				.grid_2
					= link_to image_tag("ico-close-white.png"), session[:back_to_parent], :class => "dissolve"
				.grid_2 &nbsp
				.grid_2
					= image_tag "lumini_logo.png"
	%p.clear

	.container_6
		.designer
			.grid_6.title 
				= @designer.name + ", " + @designer.nacionality
			.grid_4 
				%p
					= @designer.bio
				%p
					= @designer.birthdate.strftime("%d/%m/%y")
				-unless @designer.deathdate.nil?
					= " - " + @designer.deathdate.strftime("%d/%m/%y")
			.grid_2.subtitle.photo 
				= image_tag (@designer.images.by_cover.first.nil? ? @designer.images.first.img.url(:grid_2) : @designer.images.by_cover.first.img.url(:grid_2))