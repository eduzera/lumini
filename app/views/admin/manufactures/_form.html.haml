.actionContainer.grid_15
	.actionHeader
		%h2.grid_3.alpha 
			= @manufacture.new_record? ? "criar nova marca" : @manufacture.lang_manufacture.first.name
		%p.messageBoard.grid_9 &nbsp;
		%p.actionTriggers.grid_3.omega 
			
			=link_to "cancelar /",  @manufacture.new_record? ? admin_path : admin_manufacture_path(@manufacture)
