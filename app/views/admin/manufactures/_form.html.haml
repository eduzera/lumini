				#language_manufacture
					= render :partial => 'add_new_language', :collection => @manufacture.lang_manufacture , :as => :lang_manufacture
					
			.form-container
				.form-sub-container.grid_3.alpha	
					.form-content
						.grid_3.alpha <strong>website</strong>
				.form-sub-container.grid_3.alpha
					.form-content
						.grid_3
