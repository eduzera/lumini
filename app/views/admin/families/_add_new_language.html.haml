- new_or_existing = lang_family.new_record? ? 'new' : 'existing'
- prefix = "family[#{new_or_existing}_lang_family_attributes][]"

	.form-sub-container.grid_3
		-semantic_fields_for prefix, lang_family do |lang|
		-lang.inputs
		.form-content
			.grid_3.alpha.title
				= lang.input :language, :as => :select, :include_blank => false, :collection => Language.all

		.form-content
			.grid_3.alpha.title
				=lang.input :name, :label => false

		.form-content
			.grid_3.alpha.description
				=lang.input :description, :as => :text, :label => false
				
		.form-content	
			.grid_3.remove_language
				=link_to_function "excluir idioma" , " $(this).parents('.form-sub-container').remove()"
