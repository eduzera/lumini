- new_or_existing = lang_product.new_record? ? 'new' : 'existing'
- prefix = "product[#{new_or_existing}_lang_product_attributes][]"

	.form-sub-container.grid_3
		-semantic_fields_for prefix, lang_product do |lang|
		-lang.inputs
		.form-content
			.grid_3 
				= lang.input :language, :as => :select, :include_blank => false, :collection => Language.all

		.form-content
			.grid_3.title
				=lang.input :name, :label => false

		.form-content
			.grid_3.description
				=lang.input :description, :as => :text,  :label => false

		.form-content	
			.grid_3.tech_info
				=lang.input :tech_description, :as => :text, :label => false