- new_or_existing = lang_prize.new_record? ? 'new' : 'existing'
- prefix = "prize[#{new_or_existing}_lang_prize_attributes][]"

	.form-sub-container.grid_3
		-semantic_fields_for prefix, lang_prize do |lang|
		-lang.inputs
		.form-content
			.grid_3 
				= lang.input :language, :as => :select, :include_blank => false, :collection => Language.all

		.form-content
			.grid_3
				=lang.input :name, :label => false

		.form-content
			.grid_3
				=lang.input :description, :as => :text,  :label => false
