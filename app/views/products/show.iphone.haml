.wrapper
	= render :partial => "layouts/top_menu"
	%script{:type => "text/javascript", :charset => "utf-8", :src => 'http://static.ak.fbcdn.net/connect.php/js/FB.Share'}
	
	.container_6
		.submenu
			%p.grid_6
				=@product.category_name
				
	.container_6
		%p.grid_6.rule-two
			= @product.name
		.grid_4{:style => "margin-bottom: 18px"}
			= image_tag ( @product.images.second.nil? ?  @product.images.first.img.url(:grid_4) :  @product.images.second.img.url(:grid_4) )
		%ul.grid_2
			-@images.each do |img|		
				%li
					= link_to img.name, galery_path(img.imageable_id, @product.class.name.downcase, img.name), :class => "dissolve" 
			%li
				= link_to "o designer",	product_designers_path(@product), :class => "dissolve"
			%li
				%a{:name=>"fb_share", :type=>"button", :share_url=> product_url(@product)} facebook
				
		%p.clear
		.grid_4
			%p{:style => "margin-bottom: 24px"}= @product.description
			%p.rule-two dados tÃ©cnicos
			%p= @product.tech_description
		.grid_2
			
			-@product.product_prize.each do |product_prize|
				.grid_1.alpha
					= link_to image_tag (product_prize.prize.images.second.nil? ? product_prize.prize.images.first.img.url(:grid_1) : product_prize.prize.images.second.img.url(:grid_1)), prize_path(product_prize), :class => "dissolve"
				%p.grid_1.rule-two.arrow.omega &nbsp;